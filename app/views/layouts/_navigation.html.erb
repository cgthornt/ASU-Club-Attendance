<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to 'Club Tracker', :root, :class => 'brand' %>

  
      <!-- Profile -->
      <div class="btn-group pull-right" data-no-turbolink>
        <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
          <i class="icon-user"></i> <%= user_signed_in? ? current_user.email : "Profile" %>
          <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
        <% if user_signed_in? %>
          <!--
          <li><%= link_to 'Profile', current_user %></li>
          <li class="divider"></li> -->
          <li><%= link_to 'Logout', destroy_user_session_path, :method => :delete %></li>
        <% else %>
          <li><%= link_to 'Sign In', new_user_session_path %></li>
          <li><%= link_to 'Register', new_user_registration_path %></li>
        <% end %>
        </ul>
      </div>
      
      <!-- Left Menu -->
      <div class="nav-collapse">
        <ul class="nav">
          <li><%= link_to 'Home', :root %></li>
          <% if user_signed_in? %>
            <li><%= link_to 'My Clubs', clubs_path %></li>
            <li><%= link_to 'Events', events_path %></li>
            <li><%= link_to 'Members', members_path %></li>
          <% end %>
          
        </ul>
      </div>
    </div>
  </div>
</div>