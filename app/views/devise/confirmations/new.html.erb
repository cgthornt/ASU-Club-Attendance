<%= page_title 'Resend Confirmation Instructions' %>
<p>
  Please enter your email to resend confirmation instructions
</p>
<%= pretty_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.item(:email){ f.email_field :email } %>
  <%= f.submit_area 'Resend Instructions' %>
<% end %>

<%= render "devise/shared/links" %>
