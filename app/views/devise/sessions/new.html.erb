<%= page_title 'Sign In' %>

<%= pretty_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%= f.item(:email){ f.email_field :email } %>
  <%= f.item(:password){ f.password_field :password } %>
  

  <% if devise_mapping.rememberable? -%>
    <%= f.item(:remember_me, false) do %>
      <%= f.check_box2 :remember_me %>
    <% end %>
  <% end -%>

  <%= f.submit_area 'Sign In' %>
<% end %>

<%= render "devise/shared/links" %>
