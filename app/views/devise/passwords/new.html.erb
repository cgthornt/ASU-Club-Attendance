<%= page_title 'Forgot your password?' %>

<%= pretty_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.item(:email){ f.email_field :email } %>

  <%= f.submit_area 'Send Instructions' %>
<% end %>

<%= render "devise/shared/links" %>
